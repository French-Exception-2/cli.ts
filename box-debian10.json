{
  "variables": {
    "cpus": "6",
    "ram_mb": "8192",
    "os_version": "10.9.0",
    "os_type": "Debian_64",
    "disk_size": "204800",
    "disk_size_hr": "200GB",
    "box_type": "dev-docker",
    "headless": "true",
    "keyboard_layout": "fr",
    "provider": "virtualbox",
    "docker_ce_cli_version": "20.10.5~3-0",
    "containerd_version": "1.4.4-1",
    "docker_ce_version": "20.10.5~3-0",
    "docker_compose_version": "1.28.6",
    "docker_bind_address": "0.0.0.0",
    "SHA512Checksum": "47d35187b4903e803209959434fb8b65ead3ad2a8f007eef1c3d3284f356ab9955aa7e15e24cb7af6a3859aa66837f5fa2e7441f936496ea447904f7dddfdc20  "
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "debian-installer=en_US.UTF-8 <wait>",
        "auto <wait>",
        "locale=en_US.UTF-8 <wait>",
        "kbd-chooser/method=us <wait>",
        "keyboard-configuration/xkb-keymap={{user `keyboard_layout`}} <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "grub-installer/bootdev=/dev/sda <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "5s",
      "disk_size": "{{ user `disk_size` }}",
      "guest_os_type": "{{ user `os_type` }}",
      "headless": true,
      "http_directory": "http",
      "iso_urls": [
        "debian-{{ user `os_version` }}-amd64-netinst.iso",
        "https://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-{{ user `os_version` }}-amd64-netinst.iso"
      ],
      "iso_checksum": "sha512:{{ user `SHA512Checksum` }}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "1800s",
      "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
      "guest_additions_path": "VBoxGuestAdditions.iso",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{ user `provider` }}-debian10-amd64-{{ user `os_version` }}-{{ user `box_type` }}-{{ user `disk_size_hr` }}",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{ user `ram_mb` }}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{ user `cpus` }}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--nicpromisc1",
          "allow-all"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--nicpromisc2",
          "allow-all"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--nicpromisc3",
          "allow-all"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--natdnshostresolver1",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--natdnsproxy1",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--ioapic",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--hwvirtex",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--hpet",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--nestedpaging",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--largepages",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--vtxvpid",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--vtxux",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--pae",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--chipset",
          "ich9"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--biosapic",
          "x2apic"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--vram",
          "8"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--accelerate3d",
          "off"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "./provision/{{ user `os_type` }}/{{ user `os_version` }}/apt.configure.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "./provision/{{ user `os_type` }}/{{ user `os_version` }}/apt.update.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "./provision/{{ user `os_type` }}/{{ user `os_version` }}/apt.upgrade.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "./provision/{{ user `os_type` }}/{{ user `os_version` }}/vagrant.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "./provision/{{ user `os_type` }}/{{ user `os_version` }}/virtualbox.guest.additions.install.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "./provision/{{ user `os_type` }}/{{ user `os_version` }}/docker.install.sh",
      "environment_vars": [
        "docker_ce_cli_version={{user `docker_ce_cli_version`}}",
        "containerd_version={{user `containerd_version`}}",
        "docker_ce_version={{user `docker_ce_version`}}"
      ]
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "./provision/{{ user `os_type` }}/{{ user `os_version` }}/docker.compose.install.sh",
      "environment_vars": [
        "docker_compose_version={{user `docker_compose_version`}}"
      ]
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "./provision/{{ user `os_type` }}/{{ user `os_version` }}/interfaces.configure.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "./provision/{{ user `os_type` }}/{{ user `os_version` }}/sysctl.configure.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "./provision/{{ user `os_type` }}/{{ user `os_version` }}/services.networking.configure.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "./provision/{{ user `os_type` }}/{{ user `os_version` }}/k8s.install.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "./provision/{{ user `os_type` }}/{{ user `os_version` }}/kernel.update.sh"
    }
  ],
  "post-processors": [
    {
      "output": "builds/{{.Provider}}-debian10-{{ user `os_version` }}-{{ user `box_type` }}-{{ user `disk_size_hr` }}.box",
      "type": "vagrant"
    },
    {
      "type": "checksum",
      "checksum_types": [
        "sha256"
      ],
      "output": "builds/{{ user `provider` }}-debian10-{{ user `os_version` }}-{{ user `box_type` }}-{{ user `disk_size_hr` }}{{.ChecksumType}}.checksum"
    }
  ]
}