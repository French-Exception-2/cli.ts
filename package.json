{
  "name": "@frenchex2/cli.ts",
  "version": "1.0.0",
  "description": "Development environment for @frenchex2 products",
  "main": "build/src/cli.js",
  "scripts": {
    "clean": "npx rimraf ./build",
    "build": "npx tsc --build",
    "watch": "npx ts-node ./dev/watch.ts",
    "test": "npx mocha --config .mocharc.json",
    "test:watch": "npx nodemon --exec 'npm run test' --ext ts --watch src",
    "dev:init": "nodemon --watch ./bin/init.ps1 --exec 'pwsh ./bin/Init.ps1'"
  },
  "bin": {
    "frenchex2": "./bin/frenchex2"
  },
  "keywords": [
    "dev",
    "env",
    "virtual",
    "iac"
  ],
  "author": {
    "name": "St√©phane Erard",
    "email": "stephane.erard.se@gmail.com"
  },
  "license": "Educational, non-profit use",
  "dependencies": {
    "@frenchex/config-api": "^0.3.2",
    "@frenchex/config-cli": "^0.3.6",
    "@frenchex/config-lib": "^0.3.5",
    "@types/chai": "^4.2.15",
    "@types/chokidar": "^2.1.3",
    "@types/deepmerge": "^2.2.0",
    "@types/fs-extra": "^9.0.8",
    "@types/mkdirp": "^1.0.1",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.31",
    "@types/sprintf-js": "^1.1.2",
    "@types/yargs": "^16.0.0",
    "chai": "^4.3.0",
    "chokidar-cli": "^2.1.0",
