    "fs-extra": "^8.1.0",
    "glob": "^7.1.6",
    "json": "^10.0.0",
    "keypress": "^0.2.1",
    "lerna": "^3.22.1",
    "mkdirp": "^0.5.5",
    "mocha": "^8.3.0",
    "nconf": "^0.11.2",
    "nodemon": "^2.0.7",
    "npm-watch": "^0.9.0",
    "nyc": "^15.1.0",
    "onchange": "^7.1.0",
    "pkg-jq": "^0.2.11",
    "rimraf": "^2.7.1",
